class Solution {
public:
    bool reorderedPowerOf2(int n) {
        auto convert = [](int x) { //Lambda function to convert number to string and sort that string
            string s = to_string(x);
            sort(s.begin(), s.end());
            return s;
        };
        string target = convert(n);
        for (int i = 0; i < 31; i++) {
            if (convert(1 << i) == target) return true;
        }
        return false;
    }
};
